<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FoodBottomSheetFragment">


    <data>

        <variable
            name="FoodModel"
            type="com.sananismayilov.finalproject.data.FoodModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/maincolor"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:id="@+id/cardbottom"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_height="90dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/foodimagebottom"
                android:scaleType="fitXY"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:text="@{FoodModel.food_name}"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/cardbottom"
            app:layout_constraintLeft_toRightOf="@id/cardbottom"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/cardbottom"
            app:layout_constraintLeft_toRightOf="@id/cardbottom"
            android:layout_marginLeft="20dp"
            android:text="@{FoodModel.food_sale}"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/addcartbottomsheet"
            android:layout_width="100dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cardbottom"
            android:layout_marginRight="10dp"
            android:text="Əlavə et"
            android:textColor="@color/white"
            android:backgroundTint="@color/fabbackcolor"
            android:layout_height="42dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>





</layout>