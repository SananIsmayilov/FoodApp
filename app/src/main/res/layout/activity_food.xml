<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/maincolor"
    android:layout_height="match_parent"
    tools:context=".ui.FoodActivity">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/btmapbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:backgroundTint="@color/fabbackcolor"
        android:layout_gravity="bottom"
        app:fabAlignmentMode="center"
        app:fabAnchorMode="cradle"
        app:fabCradleMargin="15dp"
        app:fabCradleRoundedCornerRadius="30dp"
        app:fabCradleVerticalOffset="5dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:itemTextColor="@color/bottomappbarselector"
            app:itemIconTint="@color/bottomappbarselector"
            app:itemActiveIndicatorStyle="@android:color/transparent"
            android:background="@android:color/transparent"
            android:padding="0dp"
            app:labelVisibilityMode="unlabeled"
            app:itemRippleColor="@color/white"
            app:itemIconSize="30dp"
            app:menu="@menu/menu1" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:backgroundTint="@color/fabbackcolor"
        android:src="@drawable/shopingcart"
        app:layout_anchor="@id/btmapbar"
        app:tint="@color/white" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>